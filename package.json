{
  "name": "imock",
  "displayName": "Imock",
  "description": "前端 mock 后端接口，支持开启和关闭",
  "version": "0.0.1",
  "author": "Billy Qin",
  "publisher": "Qinyi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jiesenq/imock"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "imock.startMockServer",
        "title": "开启 Mock 服务"
      },
      {
        "command": "imock.stopMockServer",
        "title": "关闭 Mock 服务"
      },
      {
        "command": "imock.showTreeView",
        "title": "显示树状视图"
      }
    ],
    "configuration": {
      "title": "Imock 配置",
      "properties": {
        "imock.listenPort": {
          "type": "number",
          "default": 3000,
          "description": "Mock 服务的监听端口"
        },
        "imock.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "description": "Mock 服务的日志级别"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "imock-icon",
          "title": "IMock",
          "icon": "media/mock-icon.svg",
          "command": "imock.showTreeView"
        }
      ]
    },
    "views": {
      "imock-icon": [
        {
          "type": "webview",
          "id": "menu",
          "name": "Menu",
          "contextualTitle": "IMock"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint || (echo 'Pretest failed' && exit 1)",
    "test": "vscode-test",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.21.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "typescript": "^5.8.2"
  }
}
